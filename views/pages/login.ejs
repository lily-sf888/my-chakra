<!-- views/pages/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>
    <header>
        <% include ../partials/header %>
    </header>
    
    <main class="main-login">
            <div class="col-sm-6 col-sm-offset-3">
            <h1 class="register"><span class="fa fa-sign-in"></span> Login</h1>
            
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
            
            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group register">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="lily">
                </div>
                <div class="form-group register">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" value="1234">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Login</button>
            </form>
            <hr>
            <p class="register">Need an account? <a href="/">Signup</a></p>
        </div>
    </main>
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>